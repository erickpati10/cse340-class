<h1><%= title %></h1>

<form action="/inv/update" method="POST" id="updateForm">
  <label for="classificationList">Classification</label>
  <%- classificationSelect -%>
  <br /><br />

  <h1><%= title %></h1>

  <form action="/inv/update" method="POST" id="updateForm">
    <label for="classificationList">Classification</label>
    <%- classificationSelect -%>
    <br />

    <label for="make">Make:</label>
    <input
      type="text"
      id="inv_make"
      name="inv_make"
      required
      <%
      if
      (locals.inv_make)
      {
      %
    />
    value="<%= locals.inv_make %>" <% } %>"

    <label for="model">Model:</label>
    <input
      type="text"
      id="inv_model"
      name="inv_model"
      required
      <%
      if
      (locals.inv_model)
      {
      %
    />
    value="<%= locals.inv_model %>" <% } %>"
    <label for="description">Description:</label>
    <textarea
      id="inv_description"
      name="inv_description"
      rows="10"
      cols="80"
      required
    >
      <% if (locals.inv_description) { %>
        <%= locals.inv_description %>
      <% } %>
    </textarea>

    <label for="imagePath">Image Path:</label>
    <input
      type="text"
      id="inv_image"
      name="inv_image"
      <%
      if
      (locals.inv_image)
      {
      %
    />
    value="<%= locals.inv_image %>" <% } %>"

    <label for="imagePath">Thumbnail Path:</label>
    <input
      type="text"
      id="inv_thumbnail"
      name="inv_thumbnail"
      <%
      if
      (locals.inv_thumbnail)
      {
      %
    />
    value="<%= locals.inv_thumbnail %>" <% } %>"

    <label for="price">Price:</label>
    <input
      type="number"
      id="inv_price"
      name="inv_price"
      required
      <%
      if
      (locals.inv_price)
      {
      %
    />
    value="<%= locals.inv_price %>" <% } %>"

    <label for="year">Year:</label>
    <input
      type="number"
      id="inv_year"
      name="inv_year"
      required
      <%
      if
      (locals.inv_year)
      {
      %
    />
    value="<%= locals.inv_year %>" <% } %>"

    <label for="miles">Mileage:</label>
    <input
      type="number"
      id="inv_miles"
      name="inv_miles"
      required
      <%
      if
      (locals.inv_miles)
      {
      %
    />
    value="<%= locals.inv_miles %>" <% } %>"

    <label for="color">Color:</label>
    <input
      type="text"
      id="inv_color"
      name="inv_color"
      required
      <%
      if
      (locals.inv_color)
      {
      %
    />
    value="<%= locals.inv_color %>" <% } %>"

    <button disabled type="submit">Update Vehicle</button>

    <input type="hidden" name="inv_id" <% if (locals.inv_id) { % /> value="<%=
    locals.inv_id %>" <% } %> />
  </form>

  <script src="../../js/inv_updates.js"></script>
</form>
